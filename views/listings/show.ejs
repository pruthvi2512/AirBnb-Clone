<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h3>Listing detail</h3>
            </div>

            <div class="card col-6 offset-2"  >
                <img src="<%= inddata.image%>" class="card-img-top show-img" alt="listing-image">
                <div class="card-body">
                  <p class="card-text">
                    <b><%= inddata.title %></b><br>
                    <%= inddata.description %>
                  
                    <br>&#8377;<%= inddata.price.toLocaleString("en-IN") %>
                    <br><%= inddata.location %>
                    <br><%= inddata.country %>
                    
                </p>
                </div>
                <div class="del-edit"><div class="col-1"> 
                    <a href="/listing/<%=inddata._id %>/edit" class="btn btn-outline-danger">Edit</a>
                </div>
                
                <div class="col-1"><form method="POST" action="/listing/<%= inddata._id %>?_method=DELETE">
                    <button class="btn btn-outline-danger">Delete</button>
                   </form></div></div>
                
               
              </div>
            
            <br>
            
    </div>
    
</body>
